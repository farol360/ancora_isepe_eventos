{% extends "admin/layout.twig" %}
{% block html_title %}Cargos - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'role' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Cargos</li>
</ol>
{% endblock %}
{% block content %}

<div class="page-header">
  <p class="pull-right"><a class="btn btn-success" href="{{ base_url() }}/admin/role/add">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  </a></p>
  <h1>Cargos</h1>
</div>

{% if roles %}
<table class="table table-striped data-table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Slug</th>
      <th>Nível de acesso</th>
      <th class="th-button"></th>
      <th class="th-button"></th>
    </tr>
  </thead>
  <tbody>
    {% for role in roles %}
    <tr>
      <td>{{ role.description }}</td>
      <td>{{ role.name }}</td>
      <td>{{ role.access_level }}</td>
      <td><a class="btn btn-xs btn-default" href="{{ base_url() }}/admin/role/edit/{{ role.id }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
      </a></td>
      <td><a class="btn btn-xs btn-danger" href="{{ base_url() }}/admin/role/delete/{{ role.id }}">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Apagar
      </a></td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% else %}
<div class="alert alert-danger" role="alert">Não existem cargos cadastrados</div>
{% endif %}

{% endblock %}
