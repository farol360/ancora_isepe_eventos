{% extends "layout.twig" %}
{% set nav_active = 'index' %}
{% set nav_active = 'inicio' %}

{% block content -%}

  <section class="blog-area section" style="padding-top:10px;">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <h2>Últimos Eventos</h2>
        </div>
        {% for event in events if event.status == 1 %}
          <div class="col-xs-12 col-sm-6">

            <div class="card">
              <div class="single-post post-style-2">
                <div class="row">
                  <div class="col-xs-12 col-sm-5">
                    <img src="{{ base_url() }}/{{ event.img_featured }}" style="padding: 10px;">
                  </div>
                  <div class="col-xs-12 col-sm-7">

                    <h4 class="pre-title"><a href="{{ base_url() }}/eventos/{{ event.id }}">{{ event.name }}</a></h4>

                    <p class="title"><a href="{{ base_url() }}/eventos/categorias/{{ event.id_event_type }}">{{ event.event_type }}</a></p>


                    <p>Data(s): {{ event.date_event_description }}</p>
                    <p> Inscrições até: {{ event.date_event }}</p>
                    <p></p>
                    <a href="{{ base_url() }}/eventos/{{ event.id }}" class="btn btn-lg btn-info">Detalhes</a>

                  </div>
                </div>



              </div>
            </div>

          </div>

        {% else %}

           <div class="card"><div class="card-content"><p>Não existem eventos disponíveis para inscrição no momento.</p></div></div>
        {% endfor %}
      </div>
    </div>
  </section>

{%- endblock %}
{% block javascripts %} {{ parent()}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
{% endblock %}
