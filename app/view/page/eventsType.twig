{% extends "layout.twig" %}
{% set nav_active = 'categorias' %}
{% block content -%}



<section class="blog-area section" style="padding-top:10px;">
  <div class="container">
    <div class="row">
      <div class="col-xs-12" style="margin-bottom: 1px;">
        <ol class="breadcrumb" style="background-color: rgba(245, 245, 245, 0.53); text-align: left; margin-bottom: 1px;">
          <li><a href="{{ base_url }}/">In√≠cio</a></li>
          <li class="active">Categorias</li>
        </ol>

      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="card">
          <div class="card-header" data-background-color="purple">
            <h3>Categorias</h3>
          </div>
          <div class="card-content">
            <p>Navegue pela categoria de eventos desejada.</p>
          </div>
        </div>

      </div>
    </div>
    <div class="row">
      {% for eventType in eventsType if eventType.status == 1 %}
        <div class="col-xs-12 col-sm-4">
          <div class="card">
            <div class="card-content" style="padding-left: 10px; padding-right: 10px;">
              <div class="row">
                <div class="col-xs-12">
                  <h3 class="pre-title"><a href="{{ base_url() }}/eventos/categorias/{{ eventType.id }}">{{ eventType.name }}</a></h3>

                  <p>{{ eventType.description }}</p>

                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


{%- endblock %}
{% block javascripts %} {{ parent()}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
{% endblock %}
